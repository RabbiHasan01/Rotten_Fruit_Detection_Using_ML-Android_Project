<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPost">

    <!-- Wrap the existing LinearLayout inside a CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#30A5A1A1"
        android:layout_gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <!-- ImageView to display the selected image -->
            <ImageView
                android:id="@+id/buttonChooseImage"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/post_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <!-- EditText to input the caption -->
            <EditText
                android:id="@+id/editTextCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter caption here"
                android:inputType="textMultiLine"
                android:maxLines="5" />


            <!-- Button to post the image with the caption -->
            <Button
                android:id="@+id/buttonPostImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textAllCaps="false"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
