<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LogIn">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="Sign In"/>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signInEmailEditTextId"
                android:textSize="20sp"
                android:hint="Email"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signInPasswordEditTextId"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:hint="Password"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_marginTop="20dp"
            android:text="Sign In"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/appBarColor"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:id="@+id/signInButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget password?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp">


            </TextView>

            <TextView
                android:id="@+id/signInRegisterId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Register"
                android:textStyle="bold"
                android:textColor="@color/appBarColor"
                android:textSize="18dp" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/signInProgressBarId"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            />

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>

