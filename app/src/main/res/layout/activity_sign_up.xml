<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                 android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="Create Account"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpNameEditTextId"
                android:textSize="20sp"
                android:hint="Name"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpUsernameEditTextId"
                android:textSize="20sp"
                android:hint="Username"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpEmailEditTextId"
                android:textSize="20sp"
                android:hint="Email"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/birthdatePickerButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:contentDescription="Select Birthdate"
                    android:src="@drawable/ic_calendar" />

                <EditText
                    android:id="@+id/signUpBirthdateEditTextId"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:hint="Select Birthdate"
                    android:textSize="20sp"
                    app:backgroundTint="@color/appBarColor" />



            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ProgressBar
            android:id="@+id/signUpProgressBarId"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpAgeEditTextId"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:inputType="textEmailAddress"
                android:hint="Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinnerId"
                    app:backgroundTint="@color/appBarColor"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/signUpGenderEditTextId"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:hint="Select Gender"
                    android:textSize="20sp"
                    app:backgroundTint="@color/appBarColor" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpPasswordEditTextId"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:hint="Password"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/signUpConfirmPasswordEditTextId"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:hint="Confirm password"
                android:textColor="@android:color/black"
                app:backgroundTint="@color/appBarColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardElevation="4dp">

            <Button
                android:text="Sign Up"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/appBarColor"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:id="@+id/signUpButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"/>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
